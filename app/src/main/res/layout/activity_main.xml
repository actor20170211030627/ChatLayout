<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/blue_2EABFB"
        android:gravity="center"
        android:text="Title"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintTop_toTopOf="parent"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layoutManager="android.support.v7.widget.LinearLayoutManager"
        app:layout_constraintBottom_toTopOf="@id/cl_chatLayout"
        app:layout_constraintTop_toBottomOf="@id/tv_title"
        app:stackFromEnd="true"
        tools:listitem="@layout/item_chat_contact">
    </android.support.v7.widget.RecyclerView>

    <com.actor.chatlayout.VoiceRecorderView
        android:id="@+id/voice_recorder"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">
    </com.actor.chatlayout.VoiceRecorderView>

    <com.actor.chatlayout.ChatLayout
        android:id="@+id/cl_chatLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:clIvEmojiVisiable="true"
        app:clIvPlusVisiable="true"
        app:clIvVoiceVisiable="true"
        app:layout_constraintBottom_toTopOf="@id/fl_bottom"
        app:layout_constraintTop_toBottomOf="@id/rv_recyclerview">
    </com.actor.chatlayout.ChatLayout>

    <!--<include-->
    <!--android:id="@+id/rv_bottom"-->
    <!--layout="@layout/layout_bottom_expandable"-->
    <!--app:layout_constraintBottom_toBottomOf="parent"/>-->
    <FrameLayout
        android:id="@+id/fl_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent">
    </FrameLayout>
</android.support.constraint.ConstraintLayout>
