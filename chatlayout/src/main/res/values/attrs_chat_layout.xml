<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--这是ChatLayout的属性-->
    <declare-styleable name="ChatLayout">
        <attr name="clIvVoiceVisiable" format="boolean" /><!--左边语音按钮是否显示-->
        <attr name="clIvEmojiVisiable" format="boolean" /><!--右边表情按钮是否显示-->
        <attr name="clIvPlusVisiable" format="boolean" /><!--右边⊕按钮是否显示-->
        <attr name="clBtnSendBackground" format="reference|color" /><!--"发送"按钮的背景(默认有一个蓝色selector)-->
    </declare-styleable>
</resources>